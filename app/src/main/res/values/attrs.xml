<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Open the declare-styleable tag and set the name attribute to your custom view class name.  -->
    <declare-styleable name="EmotionalFaceView">
        <!--  Add new attributes with different names and set their format to a suitable format.  -->
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="text" format="string" />
    </declare-styleable>
</resources>